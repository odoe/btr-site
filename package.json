{
	"name": "btr-site",
	"version": "1.0.0",
	"scripts": {
		"dev": "dojo build --mode dev --watch file --serve",
		"build": "dojo build --mode dist",
		"build:dev": "dojo build --mode dev",
		"now-build": "dojo build --mode dist",
		"now-dev": "dojo build --mode dev --watch file",
		"test": "dojo test",
		"test:unit": "dojo build --mode unit && dojo test --unit --config local",
		"test:functional": "dojo build --mode functional && dojo test --functional --config local",
		"test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local"
	},
	"dependencies": {
		"@dojo/framework": "^5.0.0",
		"@dojo/themes": "^5.0.0",
		"@dojo/widgets": "^5.0.0",
		"tslib": "~1.9.3",
		"typography": "^0.16.19",
		"typography-theme-stern-grove": "^0.16.19"
	},
	"devDependencies": {
		"@dojo/cli": "^5.0.0",
		"@dojo/cli-build-app": "^5.0.0",
		"@dojo/cli-test-intern": "^5.0.0",
		"@mapbox/rehype-prism": "^0.3.1",
		"@types/fs-extra": "^7.0.0",
		"@types/node": "~12.0.2",
		"@types/typography": "^0.16.2",
		"canonical-path": "^1.0.0",
		"fs-extra": "^8.0.1",
		"hast-to-hyperscript": "^7.0.0",
		"rehype-slug": "^2.0.2",
		"remark-external-links": "^4.0.0",
		"remark-frontmatter": "^1.3.1",
		"remark-iframes": "^3.0.8",
		"remark-parse": "^6.0.3",
		"remark-parse-yaml": "0.0.2",
		"remark-rehype": "^4.0.0",
		"typescript": "~3.4.5",
		"unified": "^7.1.0"
	}
}
