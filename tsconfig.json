{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"*": [
				"types/*"
			]
		},
		"declaration": false,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": [
			"dom",
			"es5",
			"es2015.promise",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"importHelpers": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [
			"intern"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"src/widgets/header/Header.tsx",
		"src/App.tsx",
		"src/pages/Blog.tsx",
		"src/widgets/About.tsx",
		"src/main.tsx"
	]
}